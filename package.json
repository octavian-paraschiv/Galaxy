{
  "name": "galaxy",
  "version": "1.0.0",
  "description": "OPMedia Galaxy Player",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "prebuild": "npm run lint",
    "start": "npm-run-all -p electron:serve ng:serve:dev",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve:dev": "ng serve -c dev",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "test": "ng test --watch=false",
    "test:watch": "ng test --watch",
    "test:debug": "ng test --c=debug",
    "test:ci": "ng test --c=ci",
    "lint": "ng lint",
    "generate-theme": "sass src/scss/styles.default.scss src/scss/styles.css"
  },
  "author": "OPMedia Research",
  "license": "MIT",
  "devDependencies": {
    "@angular-builders/custom-webpack": "^15.0.0",
    "@angular-devkit/architect": "^0.1502.5",
    "@angular-eslint/builder": "^15.2.1",
    "@angular-eslint/eslint-plugin": "^15.2.1",
    "@angular-eslint/eslint-plugin-template": "^15.2.1",
    "@angular/common": "^15.2.6",
    "@angular/compiler": "^15.2.6",
    "@angular/compiler-cli": "^15.2.6",
    "@angular/core": "^15.2.6",
    "@angular/platform-browser": "^15.2.6",
    "@angular/platform-browser-dynamic": "^15.2.6",
    "@angular/router": "^15.2.6",
    "@ngneat/until-destroy": "^9.2.3",
    "@ngx-translate/core": "^14.0.0",
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@angular/animations": "^15.2.6",
    "@angular/forms": "^15.2.6",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "bootstrap": "^5.2.3",
    "eslint": "^8.37.0",
    "eslint-plugin-deprecation": "^1.4.1",
    "eslint-plugin-filenames": "^1.3.2",
    "font-awesome": "^4.7.0",
    "moment": "^2.29.4",
    "rxjs": "^7.8.0",
    "sweetalert2": "^11.7.3",
    "typescript": "^4.8.2",
    "zone.js": "^0.13.0"
  }
}
